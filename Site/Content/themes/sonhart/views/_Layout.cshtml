@using Meganium.Api.Trash
@using Meganium.Api.Trash
@model Meganium.Api.ViewModels.SiteViewModel
@{
    var photoCategories = Model.Managers.CategoryManager.GetByPostType("Álbum").ToList();
    var videoCategories = Model.Managers.CategoryManager.GetByPostType("Vídeo").ToList();
}
<!DOCTYPE html>
<html lang="pt-BR">
<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# website: http://ogp.me/ns/website#">
    <title>@Model.Title</title>
    <meta name="description" content="@Html.Option("SiteDescription")"/>
    <meta name="keywords" content="Fotografia, casamento, 15 anos, bodas, fotógrafo, fotos, sonhart, vídeo, filmagem">
    <meta name="author" content="Afonso França">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="description" content="">
    <meta property="google-site-verification" content="">
    <link rel="icon" type="image/png" href="~/Content/themes/sonhart/images/favicon.png">
    <link rel="stylesheet" type="text/css" media="all" href="~/Content/themes/sonhart/css/style.css" />
    <link rel="stylesheet" type="text/css" media="all" href="~/Content/themes/sonhart/css/black.css" />
    <link rel="stylesheet" type="text/css" media="all" href="~/Content/themes/sonhart/css/red.css" />
    <link rel="stylesheet" type="text/css" media="all" href="~/Content/themes/sonhart/css/css.css" />
    <link rel="stylesheet" type="text/css" media="all" href="~/Content/themes/sonhart/css/css1.css" />
    @if (ViewBag.BackgroundPhoto == null)
    {
        <meta property="og:image" content="~/Content/themes/sonhart/images/logo-black.png" />
    }
    else
    {
        <meta property="og:image" content="@ViewBag.BackgroundPhoto"/>
    }
    <style>
        #superbgimage img {
            max-width: inherit !important;
            margin: 0 auto !important;
        }
    </style>
    <!--[if lt IE 9]>
            <link rel="stylesheet" type="text/css" media="all" href="~/Content/themes/sonhart/css/ie.css" />
            <link rel="stylesheet" type="text/css" media="all" href="~/Content/themes/sonhart/css/ie_black.css" />
            <style type="text/css">
                #expander,
                #toggleThumbs,
                nav#navigation ul ul { background-color: #C83B3B; }
            </style>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    <link rel="stylesheet" id="retina-css" href="~/Content/themes/sonhart/css/retina.css"
        type="text/css" media="only screen and (-webkit-min-device-pixel-ratio: 2)">
    <link rel="stylesheet" id="prettyphoto-css" href="~/Content/themes/sonhart/css/prettyPhoto.css"
        type="text/css" media="all">
    <link rel="stylesheet" id="tipsy-css" href="~/Content/themes/sonhart/css/tipsy.css"
        type="text/css" media="all">
    <link rel="stylesheet" id="responsive-css" href="~/Content/themes/sonhart/css/responsive.css"
        type="text/css" media="all">
    <link rel="stylesheet" id="wp-syntax-css-css" href="~/Content/themes/sonhart/css/wp-syntax.css"
        type="text/css" media="all">
    <link rel="stylesheet" id="googleFonts_PT_Sans-css" href="~/Content/themes/sonhart/css/css2.css"
        type="text/css" media="all">
    <link rel="stylesheet" id="googleFonts_Yanone_Kaffeesatz-css" href="~/Content/themes/sonhart/css/css3.css"
        type="text/css" media="all">
    <link rel="stylesheet" id="googleFonts_Titillium_Web-css" href="~/Content/themes/sonhart/css/css4.css"
        type="text/css" media="all">
    <script type="text/javascript" src="~/Content/themes/sonhart/js/ga.js"></script>
    <script type="text/javascript" src="~/Content/themes/sonhart/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="~/Content/themes/sonhart/js/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Content/themes/sonhart/js/modenizr.min.js"></script>
    <script type="text/javascript" src="~/Content/themes/sonhart/js/jquery.livequery.min.js"></script>
    <script type="text/javascript" src="~/Content/themes/sonhart/js/jquery.superbgimage.min.js"></script>
    <script type="text/javascript" src="~/Content/themes/sonhart/js/custom-superbgimage.js"></script>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s);
            js.id = id;
            js.src = "//connect.facebook.net/pt_BR/all.js#xfbml=1&appId=186588884832070";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <style type="text/css">
        .recentcomments a {
            display: inline !important;
            padding: 0 !important;
            margin: 0 !important;
        }

        body {
            font: 16px/20px 'PT Sans', sans-serif;
        }

        article {
            padding: 10px 20px;
        }

        #welcomeTeaser, #sidebar .max_widget_teaser, #showtitle, #slidecaption, #sidebar h1.widget-title, #sidebar h2.widget-title, #responsiveTitle {
            font-family: 'PT Sans', sans-serif;
            font-size: 20px;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'PT Sans', sans-serif;
            font-weight: 300;
        }

        nav#navigation {
            width: 100%;
        }

        .blog h2.entry-title, .tag h2.entry-title {
            line-height: 30px;
            padding-left: 0px;
            font-size: 28px;
            min-height: inherit;
        }

        #primary h1 {
            padding-left: 20px;
            margin-bottom: 0px;
        }
    </style>
    <style type="text/css">
        @@media print {
            #feedlyMiniIcon {
                display: none;
            }
        }
    </style>
</head>
<body>
    <body class="home blog   black-theme  fullsize-gallery" style="background-color: rgb(34, 34, 34);">
        <div id="superbgimage">
            @if (ViewBag.BackgroundPhoto != null)
            {
                <a class="item" href="@ViewBag.BackgroundPhoto"></a>
            }
        </div>
        <a href="#" id="expander" class="slide-up"><span>Ocultar conteúdo</span> </a>
        <div id="scanlines" class="overlay-dotted" style="opacity: 1; z-index: 15;">
        </div>
        <div id="mobile-menu-dropdown" class="menu-main-menu-container">
            <select>
                <option value="~/">Home</option>
                <option value="~/pagina/a-empresa">A Empresa</option>
                <option value="#" disabled="disabled">Fotos</option>
                @foreach (var category in photoCategories)
                {
                    <option value="~/albuns/@category.Slug">&nbsp;&nbsp;&nbsp;@category.Title</option>
                }
                <option value="#" disabled="disabled">Vídeos</option>
                @foreach (var category in videoCategories)
                {
                    <option value="~/videos/@category.Slug">&nbsp;&nbsp;&nbsp;@category.Title</option>
                }
                <option value="~/blog">Blog</option>
                <option value="~/pagina/contato">Contato</option>
            </select>
        </div>
        <div id="page" class="zIndex">
            <header id="branding" role="banner" class="clearfix">
                <hgroup class="navbar">
                    <h1 id="site-title" class="clearfix">
                        <a href="/" rel="home" class="logo">
                            <img src="~/Content/themes/sonhart/images/logo.png" alt="Sonhart Photo e Video."
                                width="" height=""></a>
                    </h1>
                    @RenderSection("sidebar", false)
                </hgroup>
                <nav id="navigation" role="navigation" class="clearfix">
                    <div id="navHolder">
                        <h1 class="section-heading">
                            <a href="" title="" rel="home">Main menu</a></h1>
                        <ul id="menu-main-menu-1" class="sf-menu sf-js-enabled">
                            <li><span><a href="~/" title="Home">Home</a></span> </li>
                            <li><span><a href="~/pagina/a-empresa" title="A Empresa">A Empresa</a></span> </li>
                            <li><span><a href="#" title="Fotos">Fotos</a></span>
                                <ul>
                                    @foreach (var category in photoCategories)
                                    {
                                        <li><span><a href="~/albuns/@category.Slug" title="@category.Title">@category.Title</a></span>
                                        </li>
                                    }
                                </ul>
                            </li>
                            <li><span><a href="#" title="Fotos">Vídeos</a></span>
                                <ul>
                                    @foreach (var category in videoCategories)
                                    {
                                        <li><span><a href="~/videos/@category.Slug" title="@category.Title">@category.Title</a></span>
                                        </li>
                                    }
                                </ul>
                            </li>
                            <li><span><a href="~/blog" title="Blog">Blog</a></span> </li>
                            <li><span><a href="~/pagina/contato" title="Contato">Contato</a></span> </li>
                            <li><a href="#" class="iframe-dialog" style="color: #d5b03f; font-weight: bold" data-dialog-id="photo-selector" data-url="@Url.Content("~/Extension/PhotoSelector")">Selecionar Fotos</a></li>

                        </ul>
                    </div>
                </nav>
                <script src="~/Content/admin/js/src/FrameModal.js"></script>
            </header>
            <div id="main" class="clearfix zIndex">
                @RenderBody()
            </div>
        </div>
        <footer id="colophon" role="contentinfo" style="opacity: 1; bottom: 0px;">
            <span class="footer-info">copyright @DateTime.Now.Year @Html.Option("SiteTitle")
            </span><a href="http://afonsof.com" id="fullsizeKeynav" class="keynav tooltip" title="Faça também o seu site!">Powered by Mega Site</a>
        </footer>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/page.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/jquery.isotope.min.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/jquery.touchswipe.min.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/jquery.imagesLoaded.min.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/masonry.pkgd.min.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/supersubs.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/superfish.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/jquery.fitvids.min.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/jquery.easing.1.3.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/jquery.prettyPhoto.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/iScroll.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/jquery.tipsy.min.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/custom.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/jquery.mousewheel.min.js"></script>
        <script type="text/javascript" src="~/Content/themes/sonhart/js/froogaloop2.min.js"></script>
        @Model.PluginManager.OnFooter()
    </body>
</html>
