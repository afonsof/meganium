@using Meganium.Api.Resources
@model IEnumerable<Meganium.Api.Entities.Client>
@{
    ViewBag.Title = Resource.ClientAdmin;
    ViewBag.Icon = "thumbs-up";
}
<div class="btn-toolbar">
    <a class="btn btn-primary" href="@Url.Action("Create")">@Resource.CreateClient</a>
</div>
<table class="table table-striped">
    <tr>
        <th>
            @Resource.Name
        </th>
        <th>
            @Resource.Email
        </th>
        <th>
            @Resource.Hash
        </th>
        <th>
            @Resource.CreatedAt
        </th>
        <th>@Resource.Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.ActionLink(Resource.Edit, "Edit", new { id = item.Id })
                <text> | </text>
                @Html.ActionLink(Resource.Delete, "Delete", new { id = item.Id }, new { @class = "delete-button" })

            </td>
        </tr>
    }
</table>
