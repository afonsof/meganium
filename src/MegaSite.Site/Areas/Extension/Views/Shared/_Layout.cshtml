@using MegaSite.Api
<html>
<head>
    <link href="http://getbootstrap.com/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: rgba(0,0,0,0.5) !important;
            overflow: hidden !important;
            margin: 0 !important;
        }

        .modal {
            display: block;
            overflow: auto;
        }
        .modal-dialog {
            width: 90%;
        }

        .btn-primary {
            background-color: @Options.Instance.Get("Color1");
            border-color: @Options.Instance.Get("Color2");
        }

        .btn-primary.disabled {
            background-color: @Options.Instance.Get("Color1");
            border-color: @Options.Instance.Get("Color2");
        }

        .btn-primary:hover, .btn-primary:focus, .btn-primary:active, .btn-primary:visited{
            background-color: @Options.Instance.Get("Color2");
            border-color: @Options.Instance.Get("Color1");
        }
    </style>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="http://getbootstrap.com/dist/js/bootstrap.js"></script>
    <script src="~/Content/admin/js/libs/bootstrap-wizard/jquery.bootstrap.wizard.min.js"></script>

    <script>
        function show(closeFunc) {
            $('.modal').modal('show');
            $('.modal').on('hide.bs.modal', function () {
                closeFunc();
            });
        }
    </script>
    
    @RenderSection("Head")

</head>
<body>
    <div class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
