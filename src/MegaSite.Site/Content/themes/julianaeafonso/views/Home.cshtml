    <script src="~/Content/themes/julianaeafonso/js/jquery-1.8.3.min.js"></script>
    <script src="~/Content/themes/julianaeafonso/js/bootstrap.js"></script>
    <script src="~/Content/themes/julianaeafonso/js/jquery.countdown.min.js"></script>
    <script src="~/Content/themes/julianaeafonso/js/jquery.countdown-pt-BR.js"></script>
    <script src="~/Content/themes/julianaeafonso/js/jquery.flexslider.js"></script>
    <script src="~/Content/themes/julianaeafonso/js/fittext.js"></script>
    <script src="~/Content/themes/julianaeafonso/js/jquery.prettyPhoto.js"></script>
    <script src="~/Content/themes/julianaeafonso/js/jquery.sticky.js"></script>
    <script src="~/Content/themes/julianaeafonso/js/jquery.scrollTo.js"></script>
    <script src="~/Content/themes/julianaeafonso/js/jquery.localScroll.js"></script>
    <script src="~/Content/themes/julianaeafonso/js/functions.js"></script>
    <script src="~/Content/admin/js/app.min.js"></script>
    @Model.PluginManager.OnFooter()
</body>
