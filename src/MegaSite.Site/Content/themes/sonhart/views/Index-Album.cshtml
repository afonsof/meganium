@using MegaSite.Api.Trash
@model MegaSite.Api.ViewModels.SiteViewModel
<div id="single-page" class="clearfix left-sidebar">
    <div id="primary" class="portfolio-three-columns" style="display: block; margin-top: 0px;">
        <div id="content" role="main">
            <header class="entry-header">
                <h1 class="page-title">
                    Fotos de @Model.CurrentCategory.Title</h1>
            </header>
            <article>
            @foreach (var post in Model.CurrentPosts)
            {<a href="@Url.Content(post.UrlPath)" title="@post.Title">
                 <div style="float:left; width: 170px; height: 170px">
                     @Url.Thumbnail(post.FeaturedMediaFile, 150, 150, true)
                 </div>
                 <h2 style="float:left; width: 450px;">@post.Title</h2>
             </a>
                <div class="clearfix"></div>
            }
            </article>
        </div>
    </div>
    <div id="sidebar" style="display: block; margin-top: 95px;">
    </div>
</div>
